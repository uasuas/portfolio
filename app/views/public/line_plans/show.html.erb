<div class="container">
  <div class="row">
    <div class="col">
      <h2>回線プラン情報ページ</h2>
      <div class="row">
        <div class="side-content col-12 col-lg-4">
          <div class="side-content-sticky row">
            <%= render "layouts/company-table", company: @line_plan.company %>
          </div>
        </div>
        <div class="col-12 col-lg-8">
          <div class="row">
            <div class="col-12">
              <h3 class="marked-heading"><%= @line_plan.name %></h3>
            </div>
            <div class="col-5 offset-1">
              <h5>対応エリア</h5>
              <ul class="line_plan_items">
                <% @line_plan.areas.each do |area| %>
                  <li><%= area.area %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-6">
              <h5>回線内容</h5>
              <ul class="line_plan_items">
                <% @line_plan.contents.each do |content| %>
                  <li><%= content.content %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-11 col-lg-3 offset-1">
              <h5>月額料金</h5>
            </div>
            <div class="col-11 col-lg-7 offset-1">
              <!--application_helper.rbでフォーマットしたものを呼び出している。-->
              <%= format_monthly_fee(@line_plan.monthly_fee) %>円
            </div>
            <div class="col-11 col-lg-3 offset-1">
              <h5>総合評価</h5>
            </div>
            <div id="review-average" class="col-11 col-lg-7 offset-1">
              <!--reviewの平均点を表示。-->
              <%= render "public/line_plans/review-average", line_plan: @line_plan %>
            </div>
            <div class="col-11 offset-1">
              <h5>内容</h5>
              <p><%= @line_plan.introduction %></p>
            </div>
          </div>
          <div id="review-action">
            <%= render "public/line_plans/review", line_plan: @line_plan, review: @review %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
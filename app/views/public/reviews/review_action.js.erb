<!--removeを下に移動してしまうとcreate後にremoveしてしまう為、一番上に設置。-->
$('#review-card_<%= @review.id %>').remove();
$('#review-action').html('<%= j(render "public/line_plans/review", line_plan: @line_plan, review: @review) %>');
$('#review-average').html('<%= j(render "public/line_plans/review-average", line_plan: @line_plan) %>');
$('#review-count').html('<%= j(render "public/customers/review-count") %>');
<!--コメントの入力formのidを指定して空にする。-->
$('#review_content').val("")
<!--フラッシュメッセージを表示。-->
$('#flash').show()
<!--フラッシュの内容を@review.valid?で、validationの結果によってture:falseの場合で色を変え、@messegeの内容を変更する。-->
$('#flash').html('<div class="alert alert-<%= j(@review.valid? ? 'primary' : 'danger') %> text-center" role="alert"><strong><%= j(@messege) %></strong></div>');
<!--表示したメッセージを３秒後にゆっくり非表示。-->
$('#flash').delay(3000).fadeOut('slow');
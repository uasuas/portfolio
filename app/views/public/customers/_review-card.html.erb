<div class="card mb-3">
  <div class="card-body">
    <div class="card-title h5">
      <%= review.customer.name %>
    </div>
    <div class="card-text">
      <%= render "layouts/static.rate", evaluation: review %>
      <p class="px-2">
        <%= review.content %>
      </p>
    </div>
    <div class="text-right">
      投稿日 <%= review.created_at.strftime('%Y/%m/%d') %>
      <%= link_to line_plan_review_path(review.line_plan, review), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" do %>コメントを削除<% end %>
    </div>
  </div>
</div>
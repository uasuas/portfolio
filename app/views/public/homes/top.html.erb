
<%= form_tag({controller:"line_plans", action:"search"}, method: :get) do %>
  <% Area.all.each do |area| %>
    <%= check_box :area_ids, area.area %><%= area.area %>
  <% end %>
  <% Content.all.each do |content| %>
    <%= check_box :content_ids, content.content %><%= content.content %>
  <% end %>
  <%= submit_tag '検索' %>
<% end %>

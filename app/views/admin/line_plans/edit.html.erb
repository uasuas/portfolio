<div class="container">
  <div class="row">
    <div class="col-10 offset-2 mb-3">
      <h2>回線プラン編集</h2>
    </div>
    <div class="col-12">
      <div class="form-group d-flex justify-content-center align-items-center">
        <%= form_with model: [:admin, @line_plan] do |f| %>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :company_id, "企業名" %>
            </div>
            <div class="col-11 col-sm-9">
              <%= f.collection_select :company_id, Company.all, :id, :name, include_blank: "選択して下さい" %>
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :name, "回線プラン名" %>
            </div>
            <div class="col-11 col-sm-9">
              <%= f.text_field :name, autofocus: true, autocomplete: "プラン名", class: "form-control" %>
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :monthly_fee, "月額料金" %>
            </div>
            <div class="col-11 col-sm-9">
              <%= f.text_field :monthly_fee, autocomplete: "月額料金", class: "form-control" %>
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :introduction, "プラン内容" %>
            </div>
            <div class="col-11 col-sm-9">
              <%= f.text_area :introduction, autocomplete: "内容入力", class: "form-control" %>
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :area, "エリア" %>
            </div>
            <div class="col-11 col-sm-9">
              <div class="row">
                <!--collection_check_boxesメソッドによって生成されたチェックボックスのarea_idsという値で送る。-->
                <%= f.collection_check_boxes(:area_ids, Area.all, :id, :area) do |area| %>
                  <div class="col-6">
                    <%= area.label { area.check_box + area.text } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="col-3">
              <%= f.label :content, "回線" %>
            </div>
            <div class="col-11 col-sm-9">
              <div class="row">
                <!--collection_check_boxesメソッドによって生成されたチェックボックスのcontent_idsという値で送る。-->
                <%= f.collection_check_boxes(:content_ids, Content.all, :id, :content) do |content| %>
                  <div class="col-12">
                    <%= content.label { content.check_box + content.text } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="actions">
            <%= f.submit '登録', class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
$('#review-list-content_<%= @review.id %>').remove();
$('#review-card_<%= @review.id %>').remove();
<!--フラッシュメッセージを表示。-->
$('#flash').show()
<!--フラッシュの内容を@review.valid?で、validationの結果によってture:falseの場合で色を変え、@messegeの内容を変更する。-->
$('#flash').html('<div class="alert alert-<%= j(@review.valid? ? 'primary' : 'danger') %> text-center" role="alert"><strong><%= j(@messege) %></strong></div>');
<!--表示したメッセージを３秒後にゆっくり非表示。-->
$('#flash').delay(3000).fadeOut('slow');
<tr id="review-list-content_<%= review.id %>">
  <td><%= review.created_at.strftime("%Y/%m/%d") %></td>
  <td><%= review.customer.name %></td>
  <td><%= review.content %></td>
  <td class="text-right"><%= link_to "削除", admin_review_path(review.id), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %></td>
</tr>
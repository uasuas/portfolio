<div class="container">
  <div class="row">
    <div class="col">
      <h2>企業情報ページ</h2>
      <div class="row">
        <div class="col-12 col-lg-4">
          <div class="row">
            <div class="image_tag col-12 col-lg-12 col-sm-6">
              <%= image_tag @company.get_company_image(200,200) %>
            </div>
            <div class="col-12 col-lg-12 col-sm-6">
              <table class="table">
                <tbody>
                  <tr>
                    <th class="col-5 col-md-4">企業名</th>
                    <td><%= @company.name %></td>
                  </tr>
                  <tr>
                    <th>郵便番号</th>
                    <td><%= @company.zip_code %></td>
                  </tr>
                  <tr>
                    <th>住所</th>
                    <td><%= @company.address %></td>
                  </tr>
                  <tr>
                    <th>電話番号</th>
                    <td><%= @company.telephone_number %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-11 offset-1">
              <%= link_to "企業情報編集", edit_admin_company_path(@company) %>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-8">
          <div class="row">
            <div class="col-12">
              <h2>プラン一覧</h2>
            </div>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th class="col-2">プラン名</th>
                <th class="col-2">月額料金</th>
                <th class="col-4">回線種類</th>
                <th class="col-4">対応地域</th>
              </tr>
            </thead>
            <tbody>
              <% @company.line_plans.each do |plan| %>
                <!--テーブル全体をリンクに変更し、カーソルを乗せた際にカーソル変化とハイライトする。-->
                <tr onclick="window.location='<%= admin_line_plan_path(plan) %>'" role="link" style="cursor: pointer;" onmouseover="this.style.backgroundColor='#f0f0f0';" onmouseout="this.style.backgroundColor='';">
                  <td><%= plan.name %></td>
                  <td><%= plan.monthly_fee %></td>
                  <td>
                    <!--mapでプランに紐ずく回線種類情報を取得し配列を作成、その後「,」で区切りを付けたつの文字列に連結して表示する。-->
                    <% contents = plan.contents.map(&:content).join(', ') %>
                    <%= contents %>
                  </td>
                  <td>
                    <!--mapでプランに紐ずくエリア情報を取得し配列を作成、その後「,」で区切りを付けたつの文字列に連結して表示する。-->
                    <% areas = plan.areas.map(&:area).join(', ') %>
                    <%= areas %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
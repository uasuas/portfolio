<div class="container">
  <div class="row">
    <div class="col">
      <h2>企業情報ページ</h2>
      <div class="row">
        <div class="col-12 col-lg-4 col-md-12 col-sm-12">
          <div class="row">
            <div class="col-12 col-lg-12 col-md-6 col-sm-6">
              <%= image_tag @company.get_company_image(200,200) %>
            </div>
            <div class="col-12 col-lg-12 col-md-6 col-sm-6">
              <table class="table">
                <tbody>
                  <tr>
                    <th class="col-5 col-lg-4 col-md-4">企業名</th>
                    <td><%= @company.name %></td>
                  </tr>
                  <tr>
                    <th>郵便番号</th>
                    <td><%= @company.zip_code %></td>
                  </tr>
                  <tr>
                    <th>住所</th>
                    <td><%= @company.address %></td>
                  </tr>
                  <tr>
                    <th>電話番号</th>
                    <td><%= @company.telephone_number %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col offset-1">
              <%= link_to "企業情報編集", edit_admin_company_path(@company) %>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-8 col-md-12 col-sm-12">
          <%= link_to "回線プラン登録",new_admin_line_plan_path %>
          プラン一覧
        </div>
      </div>
    </div>
  </div>
</div>
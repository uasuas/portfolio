<div class="container">
  <div class="row">
    <div class="col">
      <h2>企業情報ページ</h2>
      <div class="">
        <%= link_to "企業登録", new_admin_company_path %>
      </div>
      <div class="">
        <table class="table">
          <thead>
            <tr>
              <th>企業名</th>
              <th>郵便番号</th>
              <th>住所</th>
              <th>電話番号</th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr onclick="window.location='<%= admin_company_path(company) %>'" role="link" style="cursor: pointer;" onmouseover="this.style.backgroundColor='#f0f0f0';" onmouseout="this.style.backgroundColor='';">
                <td><%= company.name %></td>
                <td><%= company.zip_code %></td>
                <td><%= company.address %></td>
                <td><%= company.telephone_number %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
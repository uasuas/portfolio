<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員情報</h2>
      <div class="row">
        <div class="col-12 col-lg-4">
          <div class="row">
            <div class="col-12 col-lg-12 col-sm-6">
              <table class="table">
                <tbody>
                  <tr>
                    <th class="col-5 col-md-4">名前</th>
                    <td><%= @customer.name %></td>
                  </tr>
                  <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.email %></td>
                  </tr>
                  <tr>
                    <th>住所</th>
                    <td><%= @customer.is_active ? "会員" : "退会" %></td>
                  </tr>
                </tbody>
              </table>
              <%= link_to "編集", edit_admin_customer_path(@customer) %>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-8">
          <div class="row">
            <div class="col-12">
              <% @customer.reviews.each do |review| %>
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="card-title h5">
                      <%= review.customer.name %>
                    </div>
                    <div class="card-text">
                      <%= render "layouts/static.rate", evaluation: review %>
                      <p class="px-2">
                        <%= review.content %>
                      </p>
                    </div>
                    <div class="text-right">
                      投稿日 <%= review.created_at.strftime('%Y/%m/%d') %>
                      <%= link_to admin_review_path(review), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" do %>コメントを削除<% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>